 <div class="header">
  <h1>Meeting Room Booking</h1>
  <p>Book room according to Current State</p>
</div>
  <h2>Meeting Rooms Booked According to Department</h2>
<div >
<center>
    <form method="post" action="/department">
    <select name="option">
      <option name="option" value="IT" >IT</option>
      <option name="option" value = "Computer" >Computer</option>
      <option name="option" value = "Entc" >Entc</option>
    </select>
    <button type = "submit">Submit</button>
  </form>
</center>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <table summary="This table shows Bookings" class="table table-bordered table-hover dt-responsive">
        <thead>
          <tr>
            <th>Name</th>
            <th>RoomID</th>
            <th>Location</th>
            <th>Date</th>
            <th>Comment</th>
            <th> Status </th>
          </tr>
        </thead>
        <tbody>
          <script id="t" type="text/x-handlebars-template">
              {{#each data}}
              <tr> <td>{{this.username}}</td><td> {{this.roomid}}</td><td> {{this.location}}</td><td> {{this.date}}</td><td> {{this.comment}}</td><td> {{this.status}}</td></tr>
              {{/each}}
            </script>

        </tbody>
        <tfoot>
          <tr>
            <td colspan="6" class="text-center"></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>

