      <link rel="stylesheet" href="css/style.css">


</head>
<link rel="stylesheet" href="index.css">
<body>
  <div class="topnav">
    <a href="bookings.hbs" >Bookings</a>
    <a href="department.hbs">Department Wise Bookings</a>
    <a href="feedbacks.html">FeedBacks</a>
  </div>
  <h2>Meeting Rooms Booked According to Department</h2>
<div>
    <form method="post" action="/department">
    <select name="option">
      <option>IT</option>
      <option>Computer</option>
      <option>Entc</option>
    </select>
  </form>

</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <table summary="This table shows Bookings" class="table table-bordered table-hover dt-responsive">
        <thead>
          <tr>
            <th>Name</th>
            <th>RoomID</th>
            <th>Location</th>
            <th>Date</th>
            <th>Comment</th>
            <th> Status </th>
          </tr>
        </thead>
        <tbody>
          <script id="t" type="text/x-handlebars-template">
              {{#each data}}
              <tr> <td>{{this.username}}</td><td> {{this.roomid}}</td><td> {{this.location}}</td><td> {{this.date}}</td><td> {{this.comment}}</td><td> {{this.status}}</td></tr>
              {{/each}}
            </script>

        </tbody>
        <tfoot>
          <tr>
            <td colspan="6" class="text-center"></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>

<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script src='https://cdn.datatables.net/1.10.5/js/jquery.dataTables.min.js'></script>
